#: Allow dumb broadcast packets to leave on internal interfaces
if [ -n "$INTERNAL" ]; then
    for i in $INTERNAL; do
	ipnm_cache $i
    	case $MASQMETHOD in
    	ipfwadm)
	    $IPFWADM -O -a accept -W ${i%%:*} -D 255.255.255.255/32
    	    ;;
    	ipchains)
	    $IPCHAINS -A output -j ACCEPT -i ${i%%:*} -d 255.255.255.255/32
    	    ;;
	netfilter)
	    $IPTABLES -A OUTPUT -j ACCEPT -o ${i%%:*} -d 255.255.255.255/32
	    ;;
    	esac
    done
fi

